<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/user_icon" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/user_icon"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/at_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_name"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/user_name"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp"
        android:text="@string/user_at"/>

    <TextView
        android:id="@+id/user_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/at_mark"
        android:layout_toRightOf="@id/at_mark"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/status_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/user_icon"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/client_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_body"
        android:layout_toRightOf="@id/user_icon"
        android:text="@string/client_via"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/status_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/client_via"
        android:layout_marginLeft="9sp"
        android:layout_toRightOf="@id/client_via"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp" />


</RelativeLayout>